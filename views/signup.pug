doctype html
head
  meta(charset='utf-8')
  title Connect 4
  link(rel='stylesheet' href='basestyle.css')
  link(rel='stylesheet' href='loginbox.css')
  script(src='Scripts/signUp.js')
include ./partials/navbar.pug
.content
  h1(style='text-align: center;') Create your account:
  form.login_box(action='/users' method='POST' onsubmit='return onSubmit()')
    h1 Sign up:
    label(for='username') Username: 
    br
    input#username(type='text' name='username' placeholder='Letters, numbers, and underscores only' minlength='5' maxlength='22' required='')
    br
    label(for='password') Password:
    br
    input#password(type='password' name='password' placeholder='Letters, numbers, and underscores only' minlength='5' maxlength='22' required='')
    br
    label(for='confirm_password') Confirm Password:
    br
    input#confirm_password(type='password' name='confirm_password' minlength='5' maxlength='22' required='')
    br
    label(for='email') Email:
    br
    input#email(type='email' name='email' placeholder='(Optional)')
    button#submit(type='submit') Sign up
  div(style='text-align: center;')
    | Already have an account? 
    a(href='/login') Log in!