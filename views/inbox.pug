doctype html
head
  meta(charset='utf-8')
  title Connect 4
  link(rel='stylesheet' href='/basestyle.css')
include ./partials/navbar.pug

.content   
    h1 Your friend requests

    if user.friendRequests.incoming.length > 0
        table
        each request in user.friendRequests.incoming
            tr
                th 
                    a(href="/users/" + request.name)=request.name
                td
                    form
                        button(type='menu' formaction=`/users/${request.id}/friends` formmethod="post") Accept
    else
        h2 You don't have any friend requests!
    br
    a(href="/users/" + user.name)="back to your profile"