doctype html
head
  meta(charset='utf-8')
  title Connect 4
  link(rel='stylesheet' href='basestyle.css')
  link(rel='stylesheet' href='loginbox.css')
  script(src='Scripts/logIn.js')
include ./partials/navbar.pug
.content
  h1(style='text-align: center;') Welcome back!
  form.login_box(action='/login' method='POST' onsubmit='return onSubmit()')
    h1 Login:
    label(for='username') Username:
    br
    input#username(type='text' name='username' placeholder='Enter Username' minlength='5' maxlength='22' required='')
    br
    label(for='password') Password:
    br
    input#password(type='password' name='password' placeholder='Enter Password' minlength='5' maxlength='22' required='')
    br
    button#submit(type='submit') Login
  div(style='text-align: center;')
    | Don&apos;t have an account? 
    a(href='/signup') Sign up!